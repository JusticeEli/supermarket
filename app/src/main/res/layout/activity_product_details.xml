<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/productDetailsTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Product Details"
                android:textSize="15sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/itemImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/productDetailsTxtView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemImageView"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:id="@+id/mainLinearLayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameTxtView"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="name of the item" />

                    <TextView

                        android:id="@+id/priceTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6787" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/descriptionTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="blue ,shiny ladies bag" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Price" />

                <TextView
                    android:id="@+id/priceTxtView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$6787" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Offer" />

                <TextView
                    android:id="@+id/offerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Size" />

                <TextView
                    android:id="@+id/sizeTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Stock" />

                <TextView
                    android:id="@+id/stockTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Specification" />

                <TextView
                    android:id="@+id/specificationTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stylish gucci bag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Tax amount" />

                <TextView
                    android:id="@+id/taxAmountTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$43" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Shipping Days/Charge" />

                <TextView
                    android:id="@+id/shippingDaysTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Address/Contact" />

                <TextView
                    android:id="@+id/addressContactTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+254768665765" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainLinearLayout">

                <Button
                    android:id="@+id/placeOrderBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Place Order"/>
                <Button
                    android:layout_toRightOf="@+id/placeOrderBtn"
                    android:id="@+id/addToCartBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>